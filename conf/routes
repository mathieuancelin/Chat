# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Application.index
GET     /signin                                 Application.signin
GET     /login                                  Application.enter
GET     /register                               Application.register
POST    /registration                           Application.registration
GET     /captcha                                Application.captcha
POST    /upload                                 Application.upload

GET     /rooms/{room}                           Application.room
GET     /rooms/{room}/title                     Application.getTitle
POST    /rooms/{room}/title                     Application.setTitle
POST    /rooms/{room}/say                       Application.say
GET     /rooms/{room}/leave                     Application.leave
POST    /rooms                                  Application.newChatRoom  
GET     /rooms                                  Application.rooms 

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

